#include "cardgame.h"
static card_t s_cardDeck[52] = {};

void initCardDeck(void)
{
	for(int i = 0; i<52;i++)
	{
		card_t card = {};
		card.cardColour  = (i % colour_size)+1;
		card.cardNumber =  (i % number_size)+1;
		s_cardDeck[i] = card;
	}
}

int main(void)
{
	int rc = 0;
	initCardDeck();

	for(int i = 0; i <10;i++)
	{
		printf("rand :%d\n", rand());
		printf("rand mod 52:%d\n", (rand()%52));

		int randNumber = (rand()%52);
		card_t card = s_cardDeck[randNumber];
		printf("card is : colour:%d number:%d\n",card.cardColour,card.cardNumber);
	}
	return rc;
}
