#include "buttonPush.h"

int main(void) {
	int rc = -1;
	int fileDesc = open("/sys/class/gpio/gpio21/value",O_RDONLY);

	if(0 > fileDesc)
	{
		rc = 1;
		return rc;
	}
	char value[1] = {};
	int sleepTime = 150000;

	while(1)
	{
		usleep(sleepTime);
		if(0 > read(fileDesc,value,1))
		{
			write(2,ERROR_MESSAGE_READ_GPIO,sizof());
		}
	}
	return rc;
}
