#include "cardgame.h"
static card_t s_cardDeck[52] = {};

void initCardDeck(void)
{
	for(int i = 0; i<52;i++)
	{
		card_t card = {};
		card.cardColour  = (i % colour_size)+1;
		card.cardNumber =  (i % number_size)+1;
		s_cardDeck[i] = card;
	}
}

int main(void)
{
	int rc = -1;
	initCardDeck();

	card_t card = s_cardDeck[rand()%52];
	printf("card is : colour:%d number:%d",card.cardColour,card.cardNumber);
	return rc;
}
